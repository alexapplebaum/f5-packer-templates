{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "region": "us-west-2",
    "vpc_id": "",
    "subnet_id": "",
    "source_ami": "ami-a4bc27c4",
    "instance_type": "m4.2xlarge",
    "associate_public_ip_address": "true",
    "ami_name": "BIGIP-13.0.0-w-ASM",
    "ami_regions": "us-west-2",
    "ami_users": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `region`}}",
    "vpc_id": "{{user `vpc_id`}}",
    "subnet_id": "{{user `subnet_id`}}",
    "source_ami": "{{user `source_ami`}}",
    "instance_type": "{{user `instance_type`}}",
    "associate_public_ip_address": "{{user `associate_public_ip_address`}}",
    "ami_name": "{{user `ami_name`}}",
    "ami_users": "{{user `ami_users`}}",
    "ami_regions": "{{user `ami_regions`}}",
    "ssh_username": "admin",
    "ssh_timeout" : "20m"
  }],
  "provisioners": [
    {
      "type": "shell-local",
      "command": "sleep 60"
    },
    {
      "type": "file",
      "source": "scripts/wait-for-bigip.sh",
      "destination": "/var/tmp/wait-for-bigip.sh"
    },
    {
      "type": "file",
      "source": "scripts/build.sh",
      "destination": "/var/tmp/build.sh"
    },
    {
      "type": "shell",
      "skip_clean": "true",
      "execute_command": "run util bash -c 'chmod +x {{ .Path }}; env {{ .Vars }} {{ .Path }}'",
      "expect_disconnect": "true",
      "start_retry_timeout": "10m", 
      "inline": [
          "bash /var/tmp/wait-for-bigip.sh",
          "bash /var/tmp/build.sh"
      ]
    }
  ]
}
