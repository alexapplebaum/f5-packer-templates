{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "region": "us-west-2",
    "vpc_id": "",
    "subnet_id": "",
    "source_ami": "ami-67d90b1f",
    "instance_type": "m4.2xlarge",
    "associate_public_ip_address": "true",
    "ami_name": "BIGIP-13.0.0.3.49.1679-HF3-ENG",
    "ami_regions": "us-west-2",
    "ami_users": "",
    "ssh_keypair_name": "",
    "ssh_private_key_file": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `region`}}",
    "vpc_id": "{{user `vpc_id`}}",
    "subnet_id": "{{user `subnet_id`}}",
    "source_ami": "{{user `source_ami`}}",
    "instance_type": "{{user `instance_type`}}",
    "associate_public_ip_address": "{{user `associate_public_ip_address`}}",
    "ami_name": "{{user `ami_name`}}",
    "ami_users": "{{user `ami_users`}}",
    "ami_regions": "{{user `ami_regions`}}",
    "ssh_username": "admin",
    "ssh_timeout" : "20m",
    "ssh_keypair_name": "{{user `ssh_keypair_name`}}",
    "ssh_private_key_file": "{{user `ssh_private_key_file`}}"
  }],
  "provisioners": [
    {
      "type": "shell-local",
      "command": "sleep 180"
    },
    {
      "type": "file",
      "source": "scripts/wait-for-bigip.sh",
      "destination": "/var/tmp/wait-for-bigip.sh"
    },
    {
      "type": "shell",
      "skip_clean": "true",
      "execute_command": "run util bash -c 'chmod +x {{ .Path }}; env {{ .Vars }} {{ .Path }}'",
      "inline": [
          "bash /var/tmp/wait-for-bigip.sh"
      ]
    },
    {
     "type": "file",
     "source": "software/BIGIP-13.0.0.0.0.1645.iso",
     "destination": "/shared/images/BIGIP-13.0.0.0.0.1645.iso"
    },
    {
     "type": "file",
     "source": "software/Hotfix-BIGIP-13.0.0.3.49.1679-HF3-ENG.iso",
     "destination": "/shared/images/Hotfix-BIGIP-13.0.0.3.49.1679-HF3-ENG.iso"
    },
    {
      "type": "shell",
      "pause_before": "15s",
      "expect_disconnect": "true",
      "skip_clean": "true",
      "execute_command": "run util bash -c 'chmod +x {{ .Path }}; env {{ .Vars }} {{ .Path }}'",
      "inline": [
          "tmsh install sys software hotfix Hotfix-BIGIP-13.0.0.3.49.1679-HF3-ENG.iso create-volume volume HD1.2 reboot",
          "sleep 900",
          "tmsh show sys software"
      ]
    },
    {
      "type": "file",
      "pause_before": "360s",
      "source": "scripts/build.sh",
      "destination": "/var/tmp/build.sh"
    },
    {
      "type": "shell",
      "skip_clean": "true",
      "execute_command": "run util bash -c 'chmod +x {{ .Path }}; env {{ .Vars }} {{ .Path }}'",
      "expect_disconnect": "true",
      "start_retry_timeout": "10m", 
      "inline": [
          "bash /var/tmp/wait-for-bigip.sh",
          "bash /var/tmp/build.sh"
      ]
    }
  ]
}
