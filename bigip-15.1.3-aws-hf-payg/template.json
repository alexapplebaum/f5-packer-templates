    "source_ami": "ami-0e5e6c0095256ac49",
    "instance_type": "c5.xlarge",
    "associate_public_ip_address": "true",
    "ami_name": "Hotfix-BIGIP-15.1.3.0.261.11-ENG",
    "ami_regions": "us-west-2",
