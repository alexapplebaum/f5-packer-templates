    "ssh_keypair_name": "",
    "ssh_private_key_file": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `region`}}",
    "vpc_id": "{{user `vpc_id`}}",
    "subnet_id": "{{user `subnet_id`}}",
    "source_ami": "{{user `source_ami`}}",
    "instance_type": "{{user `instance_type`}}",
    "associate_public_ip_address": "{{user `associate_public_ip_address`}}",
    "ami_name": "{{user `ami_name`}}",
    "ami_users": "{{user `ami_users`}}",
    "ami_regions": "{{user `ami_regions`}}",
    "ssh_username": "admin",
    "ssh_timeout" : "20m",
    "ssh_keypair_name": "{{user `ssh_keypair_name`}}",
    "ssh_private_key_file": "{{user `ssh_private_key_file`}}"
  }],
  "provisioners": [
    {
     "type": "file",
     "source": "software/BIGIP-15.1.3-0.0.11.iso",
     "destination": "/shared/images/BIGIP-15.1.3-0.0.11.iso"
    },
    {
     "type": "file",
     "source": "software/Hotfix-BIGIP-15.1.3.0.261.11-ENG.iso",
     "destination": "/shared/images/Hotfix-BIGIP-15.1.3.0.261.11-ENG.iso"
    },
    {
      "type": "shell",
      "pause_before": "15s",
      "expect_disconnect": "true",
      "skip_clean": "true",
      "remote_folder": "/var/tmp",
      "execute_command": "run util bash -c 'chmod +x {{ .Path }}; env {{ .Vars }} {{ .Path }}'",
      "inline": [
          "source /usr/lib/bigstart/bigip-ready-functions; wait_bigip_ready",
          "tmsh install sys software hotfix Hotfix-BIGIP-15.1.3.0.261.11-ENG.iso create-volume volume HD1.2 reboot",
          "while [ 1 ]; do if tmsh show sys software status | grep 'HD1.2' | grep '15.1.3.0.261' | grep complete ; then break; fi; sleep 5; done",
          "tmsh show sys software status"
      ]
    },
    {
      "type": "file",
      "pause_before": "600s",
      "source": "scripts/build.sh",
      "destination": "/var/tmp/build.sh"
    },
    {
      "type": "shell",
      "skip_clean": "true",
      "execute_command": "run util bash -c 'chmod +x {{ .Path }}; env {{ .Vars }} {{ .Path }}'",
      "expect_disconnect": "true",
      "start_retry_timeout": "10m", 
      "remote_folder": "/var/tmp",
      "inline": [
          "bash /var/tmp/build.sh"
      ]
    }
  ]
}

